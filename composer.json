{
    "name": "author-name/phpunit-lesson",
    "autoload": {
        "psr-4": {
            "Project\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --level 5",
        "phpcs": "vendor/bin/phpcs --standard=PSR12",
        "test": "vendor/bin/phpunit --color"
    }
}